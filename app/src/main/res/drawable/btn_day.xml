<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <solid android:color="#FF5733" /> <!-- Orange fill color when pressed -->
            <stroke
                android:width="2dp"
                android:color="#FF5733" /> <!-- Retain orange border color when pressed -->
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#ffffff" /> <!-- White fill color -->
            <stroke
                android:width="2dp"
                android:color="#FF5733" /> <!-- Orange border color -->
        </shape>
    </item>
</selector>
